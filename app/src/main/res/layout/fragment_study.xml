<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StudyFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Study Section"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/title"
        android:textStyle="bold|italic"
        android:layout_marginTop="20dp"
        />

    <GridLayout
        android:id="@+id/gdView"
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:layout_below="@id/title"
        android:layout_weight="8"
        android:padding="14dp"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="2"
        android:rowOrderPreserved="true"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="60dp"
        >

        <!--row 1-->
        <!--col 1-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="#4c97e7"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/anatomyCard"
            android:clickable="true">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:text="Anatomy"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:id="@+id/netIncomeView"
                    android:text="0 question solved"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--col 2-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="#57df2a"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/physiologyCard"
            android:clickable="true">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="0"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Physiology"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:id="@+id/totalLeavesView"
                    android:text="0 question solved"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--row 2-->
        <!--col 1-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#e18012"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/biochemistryCard"
            android:clickable="true">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:layout_row="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Biochemistry"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:id="@+id/projectAssignedView"
                    android:text="0 question solved"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--col 2-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="#d71f1f"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="16dp"
            android:id="@+id/pathologyCard"
            android:clickable="true">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="14dp"
                android:layout_column="0"
                android:layout_row="0"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Pathology"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:id="@+id/workingHourView"
                    android:text="0 question solved"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>

</FrameLayout>